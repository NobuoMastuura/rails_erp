<h1>Listing product_groupings</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Class name</th>
    <th>Product grouping</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_groupings.each do |product_grouping| %>
  <tr>
    <td><%= product_grouping.code %></td>
    <td><%= product_grouping.name %></td>
    <td><%= product_grouping.class_name %></td>
    <td><%= ProductGrouping.find(product_grouping.product_grouping_id).name %></td>    
    <td><%= link_to 'Show', product_grouping %></td>
    <td><%= link_to 'Edit', edit_product_grouping_path(product_grouping) %></td>
    <td><%= link_to 'Destroy', product_grouping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

