<h1>Listing departments</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Name</th>
    <th>Organization hierarchy</th>
    <th>Data input</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.code %></td>
    <td><%= department.start_date %></td>
    <td><%= department.end_date %></td>
    <td><%= department.name %></td>
    <td><%= department.organization_hierarchy %></td>
    <td><%= department.data_input %></td>
    <td><%= link_to 'Show', department %></td>
    <td><%= link_to 'Edit', edit_department_path(department) %></td>
    <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

