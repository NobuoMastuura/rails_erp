  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.code %></td>
    <td><%= customer.branch_number %></td>
    <td><%= customer.division %></td>
    <td><%= customer.billing_code %></td>
    <td><%= customer.billing_branch_number %></td>
    <td><%= customer.collect_code %></td>
    <td><%= customer.collect_branch_number %></td>
    <td><%= customer.name %></td>
    <td><%= customer.name_kana %></td>
    <td><%= customer.company_person_responsible_code %></td>
    <td><%= customer.person_responsible_name %></td>
    <td><%= customer.department_name %></td>
    <td><%= customer.zip %></td>
    <td><%= customer.prefectures %></td>
    <td><%= customer.address_1 %></td>
    <td><%= customer.address_2 %></td>
    <td><%= customer.phone_number %></td>
    <td><%= customer.fax_number %></td>
    <td><%= customer.mail %></td>
    <td><%= customer.collect_division %></td>
    <td><%= customer.closing_day_1 %></td>
    <td><%= customer.payment_month_1 %></td>
    <td><%= customer.payment_day_1 %></td>
    <td><%= customer.payment_method_1 %></td>
    <td><%= customer.closing_day_2 %></td>
    <td><%= customer.payment_month_2 %></td>
    <td><%= customer.payment_day_2 %></td>
    <td><%= customer.payment_method_2 %></td>
    <td><%= customer.connection.name %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

